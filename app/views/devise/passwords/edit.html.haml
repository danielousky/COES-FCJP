    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password,                                                                    |
        label: "Nueva Clave",                                                                 |
        required: true,                                                                       |
        autofocus: true,                                                                      |
        hint: ("MÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length), |
