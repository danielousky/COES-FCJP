%h1.fs-2 Cambio de Clave de Usuario
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, novalidate: false }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password,                                                                    |
      label: "Nueva Clave",                                                                 |
      required: true,                                                                       |
      autofocus: true,                                                                      |
      hint: ("MÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length), |
      input_html: { autocomplete: "new-password" }   

    = f.input :password_confirmation,              |
      label: "Confirme su nueva clave",            |
      required: true,                              |
      input_html: { autocomplete: "new-password" } |
  .align-items-center.mt-0
    .d-grid
      = f.button :submit, "Guargar mi clave", class: 'btn btn-primary'


