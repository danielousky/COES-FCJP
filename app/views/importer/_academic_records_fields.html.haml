    - schools = current_user&.admin&.schools_auh
    = collection_select nil, :school_id, current_user&.admin&.schools_auh, :id, :name, {:prompt => "Seleccione la escuela..."}, { class: 'form-control', required: true}
    .form-text
      %span.label.label-danger Requerido

