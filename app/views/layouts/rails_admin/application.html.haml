!!!
%html{:lang => "#{I18n.locale}"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = render "layouts/rails_admin/head"
  %body.rails_admin
    #admin-js{"data-i18n-options" => "#{I18n.t("admin.js").to_json}"}
    #loading.badge.bg-warning{:style => "display:none; position:fixed; right:20px; bottom:20px; z-index:100000"}
      = t('admin.loading')
    %nav{:class => "navbar navbar-expand-md fixed-top #{RailsAdmin::Config.navbar_css_classes.join(' ')}"}
      = render "layouts/rails_admin/navigation"
    .container-fluid
      = render "layouts/rails_admin/sidebar_navigation"
      %header.fixed-top.mt-5.py-2{"data-model" => "#{@abstract_model.to_param}"}
        %h4.text-center.bg-info.text-primary.p-1= "#{@abstract_model.try(:pretty_name) || @page_name} | #{[_get_plugin_name[0] || 'Rails', _get_plugin_name[1] || 'Admin'].join(' ')}"
      %br
      %br
      = render template: 'layouts/rails_admin/content'

    %br
    %br
    = render 'layouts/remote-modal'
    = render '/layouts/footer'
